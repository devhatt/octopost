{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "~config/*": [
        "config/*"
      ],
      "~electron/*": [
        "src/electron/*"
      ],
      "~pages/*": [
        "pages/*"
      ],
      "~components/*": [
        "components/*"
      ],
      "~styles/*": [
        "styles/*"
      ],
      "~store/*": [
        "store/*"
      ],
      "~snippets/*": [
        "snippets/*"
      ],
      "~interfaces/*": [
        "interfaces/*"
      ],
      "~services/*": [
        "services/*"
      ],
      "~constants/*": [
        "constants/*"
      ],
      "~utils/*": [
        "utils/*"
      ],
      "~hooks/*": [
        "hooks/*"
      ],
      "~types/*": [
        "types/*"
      ],
      "~enums/*": [
        "enums/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/electron/**/*",
    "playwright-ct.config.ts",
    "setupTests.js",
    "tests-examples/**/*",
    "playwright/**/*",
    "e2e-testing/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}