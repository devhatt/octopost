{
  "name": "@octopost/core",
  "version": "0.1.1-alpha.0",
  "engines": {
    "node": "18.18.2",
    "pnpm": "^8"
  },
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "build": "vite build",
    "changeset": "changeset",
    "ci:publish": "pnpm build && changeset publish",
    "ci:version": "changeset version",
    "code-style": "concurrently \"pnpm lint\" \"pnpm stylelint\" \"pnpm prettier\"",
    "commit": "git-cz",
    "eject": "vite eject",
    "electron:build": "pnpm build && electron-builder --windows --config electron-builder.json",
    "electron:dev": "concurrently \"cross-env BROWSER=none pnpm start\" \"wait-on http://127.0.0.1:3000 && tsc -p electron -w\" \"wait-on http://127.0.0.1:3000 && tsc -p electron && electron .\"",
    "electron:dist": "pnpm build && tsc -p electron && electron-builder --mac --dir",
    "ladle": "ladle serve",
    "lint:fix": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "prepare": "husky install",
    "prettier": "prettier . --check --ignore-unknown",
    "prettier:fix": "prettier . --write --ignore-unknown",
    "start": "vite",
    "stylelint": "stylelint \"**/*.scss\"",
    "test:coverage": "vitest --coverage",
    "test:ct": "playwright test -c playwright-ct.config.ts",
    "test:e2e": "playwright test --pass-with-no-tests",
    "test:ui": "vitest --ui --coverage",
    "test": "vitest"
  },
  "dependencies": {
    "@changesets/cli": "^2.27.1",
    "@sentry/react": "^7.92.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "classnames": "^2.5.1",
    "electron-devtools-installer": "^3.2.0",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-vitest": "^0.3.20",
    "framer-motion": "^10.17.9",
    "i18next": "^23.7.16",
    "i18next-browser-languagedetector": "^7.2.0",
    "jsdom": "^22.1.0",
    "nanoid": "^5.0.3",
    "normalize.css": "^8.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.0.0",
    "react-router-dom": "^6.21.1",
    "vite": "^5.0.11",
    "vite-tsconfig-paths": "^4.2.2"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@commitlint/cz-commitlint": "^18.4.4",
    "@ladle/react": "^4.0.1",
    "@playwright/experimental-ct-react": "^1.40.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/electron-devtools-installer": "^2.2.5",
    "@types/node": "^20.10.7",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@types/testing-library__jest-dom": "5.14.9",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "6.16.0",
    "@vitest/coverage-istanbul": "^0.34.6",
    "@vitest/ui": "^0.34.6",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^24.1.2",
    "electron-builder": "^24.9.1",
    "electron-is-dev": "^2.0.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "eslint-config-prettier": "9.1.0",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-array-func": "4.0.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-no-secrets": "0.8.9",
    "eslint-plugin-only-warn": "1.1.0",
    "eslint-plugin-perfectionist": "2.5.0",
    "eslint-plugin-playwright": "0.21.0",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-regexp": "2.2.0",
    "eslint-plugin-sort-keys-fix": "1.1.2",
    "eslint-plugin-testing-library": "6.2.0",
    "eslint-plugin-typescript-sort-keys": "3.1.0",
    "eslint-plugin-unicorn": "50.0.1",
    "eslint-plugin-write-good-comments": "0.2.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "postcss": "8.4.33",
    "prettier": "^3.1.1",
    "sass": "^1.69.7",
    "stylelint": "^16.1.0",
    "stylelint-config-sass-guidelines": "11.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-prettier": "5.0.0",
    "stylelint-scss": "6.0.0",
    "typescript": "5.2.2",
    "typescript-plugin-css-modules": "^5.0.2",
    "vite-plugin-electron": "^0.15.5",
    "vite-plugin-native": "^0.2.0",
    "vitest": "^0.34.6",
    "wait-on": "^7.2.0",
    "zustand": "^4.4.6"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write --ignore-unknown"
    ],
    "*.scss": [
      "stylelint --fix",
      "prettier --write --ignore-unknown"
    ],
    "*": [
      "prettier --write --ignore-unknown"
    ]
  }
}
